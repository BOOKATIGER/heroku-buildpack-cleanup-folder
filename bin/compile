#!/usr/bin/env bash

clean_dir() {
    	cd $1
    	if [ -f ".slugcleanup" ]; then
		echo "-----> Found slugcleanup"
		sed -e 's/#.*$//' -e '/^$/d' .slugcleanup | while read -r p; do
			echo "Removing $(readlink -f $p)"
			rm -rf $(readlink -f $p)
		done
        	rm .slugcleanup
	fi
	cd -
}

clean_dir $1

if [ -f "$3/NODE_APP" ]; then
	clean_dir $1/$(cat "$3/NODE_APP")
fi
